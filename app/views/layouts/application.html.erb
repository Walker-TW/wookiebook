<!DOCTYPE html>
<html>
  <head>
    <title>Acebook</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= yield :page_scripts %>
    <%= favicon_link_tag asset_path('wookie.png') %>
  </head>

  <body>
    <%= render 'layouts/navigation'%>
    <%= audio_tag("log_out.mp3", class: "logoutAudio", preload: "true") %>
    <% if session[:user_id] %>
      <%= render 'layouts/chat'%>
    <% end %>
    <%= yield %>
  </body>
</html>
