<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table id='posts'>
  <thead>

  </thead>

  <tbody>
    <% @user.posts.reverse.each do |post| %>
      <tr>
        <td><%=post.post_content%></td>
        <td><%=post.created_at%></td>
        <td><%=User.find(post.user_id).email%></td>
        <td><%= link_to 'Edit', edit_user_post_path(@user, post) %></td>
        <td><%= link_to 'Delete', post, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_user_post_path(@user) %>
